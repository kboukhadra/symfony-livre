{% extends 'SdzBlogBundle::layout.html.twig' %}


{% block title %}
   Accueil - {{ parent() }}
{% endblock %}

{% block sdzblog_body %}
    {{ parent() }}

{% for message in app.session.flashbag.get('info') %}
    <p>Message: {{ message }}</p>
{% endfor %}

    <h2>Liste des articles</h2>
    {% if articles is null %}
        Pas d'articles
    {% endif %}
    <ul>

        {% for article in articles %}
       {#on in inclus la vue  a chaque it√©ration#}
            {% include "SdzBlogBundle:Blog:article.html.twig" with {'accueil':true} %}


            <hr/>
         {% else %}
            Pas encore d'article d'article
           {% endfor %}
    </ul>

    <div class="pagination">
        <ul>
            {% for p in range(1,nombrePage)  %}
            <li{% if p == page %} class="active"{% endif %}>
            <a href="{{ path('sdzblog_accueil', {'page':p})  }}">{{ p }}</a>
             </li>
            {% endfor %}
        </ul>

    </div>


{% endblock %}

