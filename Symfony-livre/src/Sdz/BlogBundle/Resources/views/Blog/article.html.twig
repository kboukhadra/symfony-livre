{% set accueil=accueil|default(false) %}
<h2>
    {% if article.image is not null %}

   <img src="{{ asset(article.image.UrlPath) }}" alt="{{ article.image.alt }}" />

    {% endif %}

    {# si on est sur la page d'accueil on fait un lien vers l'article si non non#}
    {% if accueil %}
    <a href="{{ path('sdzblog_voir',{'slug':article.slug}) }}">{{ article.titre }}</a>
        {% else %}

       {{ article.titre }}
    {% endif %}



</h2>
<i> le {{ article.date|date('d/m/Y') }}, par {{ article.auteur }}</i>
<div class="well">
    {{ article.contenu }}
</div>

{# on afficle les catégorie éventuelle#}
{% if article.categories.count >0 %}
<div class="well-small">
    <p>
       <i>Categorie :
       {% for categorie in article.categories %}
           {{ categorie.nom }}{% if not loop.last %} ,{% endif %}
           {% endfor %}
       </i>
    </p>
</div>
{% endif %}